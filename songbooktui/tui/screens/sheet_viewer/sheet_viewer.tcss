Screen {
    layout: vertical;
    layers: viewer bottom-bar top-bar;
}

#viewer-container {
    layer: viewer;
    width: auto;
    height: auto;
    margin-bottom: 2;
}

ContentSwitcher {
    layer: viewer;
    margin-top: 1;
    dock: top;
    align: center top;
}

#viewer_txt {
    width: auto;
    height: 1fr;
}

#viewer_md {
    width: auto;
    height: 1fr;
    overflow-y: auto;
    padding: 0;
    margin: 0;
}

TopBar {
    layer: top-bar;
}

BottomBar {
    layer: bottom-bar;
}
